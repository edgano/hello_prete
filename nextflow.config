process {
  // default container for this example
  container = 'quay.io/nextflow/bash'
  // sehll captures exit codes from upstream processes
  shell = ['/bin/bash', '-euo', 'pipefail']
}

profiles {
  debug {
    process.beforeScript = 'env' 
  }
  lsf {
    executor {
      name = 'lsf'
      // use perJobMemLimit so '-M' matches '-R [mem]' when bsub'ing
      perJobMemLimit = true
    }
  }
  singularity {
    // use singularty
    singularity {
      enabled = true
      autoMounts = true
    }
  }
}
